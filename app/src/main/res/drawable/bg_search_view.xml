<!-- bg_search_view.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#F5F5F5" /> <!-- Background color -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Padding for the shadow -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Stroke color for the border -->
</shape>
