<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ItemDetailsActivity">





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:src="@drawable/backarrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Request" />
    </LinearLayout>

    <ImageView
        android:id="@+id/previewItemImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cit"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Item Title -->
        <TextView
            android:id="@+id/previewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ITEMNAME"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <!-- Description -->
        <TextView
            android:id="@+id/previewClaimantId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Claimant: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Landmark -->
        <TextView
            android:id="@+id/previewbriefDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Message: "
            android:textColor="@color/black"
            android:textSize="16sp" />



        <!-- Button Container -->
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="Retrieval Location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <!-- Request Claim Button -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Confirm Request"
                android:textColor="@color/black"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="16dp" />



        </LinearLayout>

    </LinearLayout>

    <!-- Add more TextViews or other UI elements here if needed to display other item details -->

</LinearLayout>
